<Window x:Class="MacroBase.WINDOW.CaptureWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MacroBase.WINDOW"
        mc:Ignorable="d"
        Title="CaptureWin" Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" MouseDown="Window_MouseDown" MouseMove="Window_MouseMove" MouseUp="Window_MouseUp" Loaded="Window_Loaded">
    <Window.Background>
        <SolidColorBrush Color="#FF4BD8CC" Opacity="0.1"/>
    </Window.Background>
    <Canvas x:Name="canvas">
        <Label x:Name="label" Content="Label" HorizontalAlignment="Left" Margin="364,228,0,0" VerticalAlignment="Top" FontSize="35" FontWeight="Bold" Foreground="#FF0A2BFD"/>
        <Rectangle x:Name="rectangle" Height="100" Stroke="#FFF12525" Width="100" Canvas.Left="100" StrokeThickness="2" Visibility="Hidden" />
        <Label x:Name="CheckLabel" Content="×" Canvas.Left="125" Canvas.Top="333" FontSize="50" FontWeight="Bold" Foreground="#FFFD0A78" Visibility="Hidden"/>

    </Canvas>
</Window>
